<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kvsoftware.rxkotlin.home.HomeFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_creatingFragment"
            app:destination="@id/creatingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_transformingFragment"
            app:destination="@id/transformingFragment" />
    </fragment>

    <fragment
        android:id="@+id/creatingFragment"
        android:name="com.kvsoftware.rxkotlin.creating.CreatingFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_creating" />

    <fragment
        android:id="@+id/transformingFragment"
        android:name="com.kvsoftware.rxkotlin.transforming.TransformingFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_transforming">

        <action
            android:id="@+id/action_transformingFragment_to_bufferFragment"
            app:destination="@id/bufferFragment" />
        <action
            android:id="@+id/action_transformingFragment_to_flatMapFragment"
            app:destination="@id/flatMapFragment" />
        <action
            android:id="@+id/action_transformingFragment_to_groupByFragment"
            app:destination="@id/groupByFragment" />
        <action
            android:id="@+id/action_transformingFragment_to_mapFragment"
            app:destination="@id/mapFragment" />

    </fragment>

    <fragment
        android:id="@+id/bufferFragment"
        android:name="com.kvsoftware.rxkotlin.transforming.buffer.BufferFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_buffer" />

    <fragment
        android:id="@+id/flatMapFragment"
        android:name="com.kvsoftware.rxkotlin.transforming.flatmap.FlatMapFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_flat_map" />

    <fragment
        android:id="@+id/groupByFragment"
        android:name="com.kvsoftware.rxkotlin.transforming.groupby.GroupByFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_group_by" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.kvsoftware.rxkotlin.transforming.map.MapFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_map" />

</navigation>